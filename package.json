{
  "name": "formguardian-react",
  "version": "1.0.5",
  "description": "A reusable, customizable Form Validator Widget for React with comprehensive validation, error handling, and micro-animations.",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js",
      "default": "./dist/index.es.js"
    },
    "./styles": {
      "types": "./dist/styles/index.d.ts",
      "default": "./dist/styles/index.css"
    },
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "form",
    "validation",
    "validator",
    "typescript",
    "form-validation",
    "error-handling",
    "animations",
    "customizable",
    "reusable",
    "widget",
    "react-component"
  ],
  "author": {
    "name": "Himanshu Sinha",
    "url": "https://github.com/himanshu2347x"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himanshu2347x/formguardian-react.git"
  },
  "homepage": "https://github.com/himanshu2347x/formguardian-react#readme",
  "bugs": {
    "url": "https://github.com/himanshu2347x/formguardian-react/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.build.json",
    "postbuild": "node scripts/copy-styles.js",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/vite": "^4.1.16",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}